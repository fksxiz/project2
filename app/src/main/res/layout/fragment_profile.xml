<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".View.ProfileFragment"
    android:background="@color/cl_main"
    >

    <View
        android:id="@+id/profileTopLabel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/cl_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textColor="@color/cl_alice_blue"
        app:layout_constraintStart_toStartOf="@id/profileTopLabel"
        app:layout_constraintEnd_toEndOf="@id/profileTopLabel"
        app:layout_constraintTop_toTopOf="@id/profileTopLabel"
        app:layout_constraintBottom_toBottomOf="@id/profileTopLabel"
        android:textSize="20sp"
        android:fontFamily="@font/roboto_regular"
        />

<ImageView
    android:id="@+id/catImageView"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/profileTopLabel"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:src="@drawable/cat"
    android:scaleType="centerCrop"
    />

    <TextView
        android:id="@+id/nameEmailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MyNameOne\nexample@mail.com"
        android:textColor="@color/cl_white_cat"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/catImageView"
        app:layout_constraintStart_toStartOf="@id/catImageView"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/roboto_regular"
        />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="@color/cl_blue"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/catImageView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginStart="10dp"
        />

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/nameTextView"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Ivan Ivanov"
        android:textSize="16sp"
        android:layout_marginHorizontal="10dp"
        android:fontFamily="@font/roboto_regular"
        />

    <ImageView
        android:id="@+id/changeNameImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pen"
        app:layout_constraintEnd_toEndOf="@id/nameEditText"
        app:layout_constraintTop_toTopOf="@id/nameEditText"
        app:layout_constraintBottom_toBottomOf="@id/nameEditText"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="@color/cl_blue"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/nameEditText"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/roboto_regular"
        />

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/emailTextView"
        app:layout_constraintStart_toStartOf="parent"
        android:inputType="textEmailAddress"
        android:text="example@mail.com"
        android:textSize="16sp"
        android:layout_marginHorizontal="10dp"
        android:fontFamily="@font/roboto_regular"
        />

    <ImageView
        android:id="@+id/changeEmailImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pen"
        app:layout_constraintEnd_toEndOf="@id/emailEditText"
        app:layout_constraintTop_toTopOf="@id/emailEditText"
        app:layout_constraintBottom_toBottomOf="@id/emailEditText"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:id="@+id/passwordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@color/cl_blue"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/emailEditText"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/roboto_regular"
        />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/passwordTextView"
        app:layout_constraintStart_toStartOf="parent"
        android:inputType="textPassword"
        android:paddingEnd="75dp"
        android:text="qweqwe"
        android:textSize="16sp"
        android:layout_marginHorizontal="10dp"
        android:fontFamily="@font/roboto_regular"
        />

    <ImageView
        android:id="@+id/changePasswordImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pen"
        app:layout_constraintEnd_toEndOf="@id/passwordEditText"
        app:layout_constraintTop_toTopOf="@id/passwordEditText"
        app:layout_constraintBottom_toBottomOf="@id/passwordEditText"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        />

    <ImageView
        android:id="@+id/showPasswordImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_visibility_off"
        app:layout_constraintEnd_toStartOf="@+id/changePasswordImageView"
        app:layout_constraintTop_toTopOf="@id/passwordEditText"
        app:layout_constraintBottom_toBottomOf="@id/passwordEditText"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        />

    <View
        android:id="@+id/bottomMenuView"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/cl_blue"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.3"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:textColor="@color/cl_blue"
        android:background="@drawable/sh_exitbutton"
        app:layout_constraintBottom_toTopOf="@id/bottomMenuView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/roboto_bold"
        android:textAllCaps="false"

        />

    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/profile"
        app:layout_constraintEnd_toEndOf="@id/bottomMenuView"
        app:layout_constraintTop_toTopOf="@id/bottomMenuView"
        app:layout_constraintBottom_toTopOf="@+id/bottomTextView"
        app:layout_constraintStart_toStartOf="@id/bottomMenuView"
        app:layout_constraintVertical_chainStyle="packed"
        />

    <TextView
        android:id="@+id/bottomTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/cl_white"
        app:layout_constraintTop_toBottomOf="@id/profileImageView"
        android:text="Profile"
        app:layout_constraintStart_toStartOf="@id/profileImageView"
        app:layout_constraintBottom_toBottomOf="@id/bottomMenuView"
        app:layout_constraintEnd_toEndOf="@id/profileImageView"
        android:textSize="12sp"
        android:fontFamily="@font/roboto_regular"
        />

    <ImageView
        android:id="@+id/messageImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon"
        app:layout_constraintEnd_toStartOf="@id/profileImageView"
        app:layout_constraintTop_toTopOf="@id/bottomMenuView"
        app:layout_constraintBottom_toBottomOf="@id/bottomMenuView"
        app:layout_constraintStart_toStartOf="@id/bottomMenuView"
        />

    <ImageView
        android:id="@+id/settingsImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/settings"
        app:layout_constraintEnd_toEndOf="@id/bottomMenuView"
        app:layout_constraintTop_toTopOf="@id/bottomMenuView"
        app:layout_constraintBottom_toBottomOf="@id/bottomMenuView"
        app:layout_constraintStart_toEndOf="@id/profileImageView"
        />




</androidx.constraintlayout.widget.ConstraintLayout>