<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".View.ChatsFragment"
    android:background="@color/cl_main">

    <View
        android:id="@+id/profileTopLabel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/cl_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chats"
        android:textColor="@color/cl_alice_blue"
        app:layout_constraintStart_toStartOf="@id/profileTopLabel"
        app:layout_constraintEnd_toEndOf="@id/profileTopLabel"
        app:layout_constraintTop_toTopOf="@id/profileTopLabel"
        app:layout_constraintBottom_toBottomOf="@id/profileTopLabel"
        android:textSize="20sp"
        />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchSearchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/profileTopLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/sh_search"
        android:layout_margin="10dp"
        android:layoutDirection="rtl"
        />


    <ImageView
        android:id="@+id/personImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/searchSearchView"
        app:layout_constraintBottom_toTopOf="@id/bottomMenuView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/man"
        android:layout_marginBottom="50dp"
        />

    <TextView
        android:id="@+id/personTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="So lonely and sad...\nBut lets light up\nthis place a bit,\nstart a new chat\nwith your friend!"
        app:layout_constraintTop_toBottomOf="@id/personImageView"
        app:layout_constraintStart_toStartOf="@id/personImageView"
        app:layout_constraintEnd_toEndOf="@id/personImageView"
        android:textAlignment="center"
        android:textSize="17sp"
        android:textColor="@color/cl_gray"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/personTextView"
        app:layout_constraintStart_toStartOf="parent"
        android:text="QWEQWEWQEASDASDASD"
        style="@style/RedHUGEText"/>

    <View
        android:id="@+id/bottomMenuView"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/cl_blue"
        />

    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/profile_unactive"
        app:layout_constraintEnd_toEndOf="@id/bottomMenuView"
        app:layout_constraintTop_toTopOf="@id/bottomMenuView"
        app:layout_constraintBottom_toBottomOf="@id/bottomMenuView"
        app:layout_constraintStart_toStartOf="@id/bottomMenuView"
        />

    <TextView
        android:id="@+id/bottomTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/cl_white"
        app:layout_constraintTop_toBottomOf="@id/messageImageView"
        android:text="Chats"
        app:layout_constraintStart_toStartOf="@id/messageImageView"
        app:layout_constraintBottom_toBottomOf="@id/bottomMenuView"
        app:layout_constraintEnd_toEndOf="@id/messageImageView"
        android:textSize="12sp"
        />

    <ImageView
        android:id="@+id/messageImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/chats_active"
        app:layout_constraintEnd_toStartOf="@id/profileImageView"
        app:layout_constraintTop_toTopOf="@id/bottomMenuView"
        app:layout_constraintBottom_toTopOf="@id/bottomTextView"
        app:layout_constraintStart_toStartOf="@id/bottomMenuView"
        android:layout_margin="0dp"
        app:layout_constraintVertical_chainStyle="packed"
        android:padding="0dp"
        />

    <ImageView
        android:id="@+id/settingsImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/settings"
        app:layout_constraintEnd_toEndOf="@id/bottomMenuView"
        app:layout_constraintTop_toTopOf="@id/bottomMenuView"
        app:layout_constraintBottom_toBottomOf="@id/bottomMenuView"
        app:layout_constraintStart_toEndOf="@id/profileImageView"
        />

</androidx.constraintlayout.widget.ConstraintLayout>